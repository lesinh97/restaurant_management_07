<%= javascript_include_tag "search_booking" %>
<section id="bookings" class="container content-section "><div id="wrap">
  <div id="main" class="container clear-top">
    <div class = "booking">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title"><%= t "booking_detail_header" %></h3>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class=" col-md-12 col-lg-12 ">
              <%= form_tag booking_tickets_path, method: "get", id: "search-form" do %>
                <%= select_tag :search, options_for_select(@customer_list, :name),
                  id: "search-box", prompt: "By name", class: "col-md-6 btn btn-default" %>
                <%= button_tag(type: :submit, class: "btn btn-search btn-success") do %>
+                 <i class="fa fa-search"></i>
                <% end %>
              <% end %>
              <table class="table table-user-information">
                <thead>
                  <tr>
                    <th><%= t "owner_name_label" %></th>
                    <th><%= t "room_no" %></th>
                    <th><%= t "room_type" %></th>
                    <th><%= t "start_date_table" %></th>
                    <th><%= t "end_date_table" %></th>
                    <th><%= t "ticket_price" %></th>
                    <th><%= t "make_invocie_table" %></th>
                    </tr>
                    <section id="section-booking">
                      <%= render @booking_tickets %>
                    </section>
                  </thead>
                </table>
                <%= will_paginate @booking_tickets, renderer: BootstrapPagination::Rails %>
              </div>
            </div>
          </div>
        </div>
        <%= link_to t("new_booking_button"), new_booking_ticket_path, class: "btn btn-default btn-lg" %>
        <%= link_to t("view_rooms_button"), rooms_path, class: "btn btn-default btn-lg" %>
      </div>
    </div>
  </div>
</section>
