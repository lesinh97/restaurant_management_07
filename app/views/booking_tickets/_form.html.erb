<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="form-body">
        <div class= "innter-form">
          <%= form_for @booking_ticket do |f| %>
            <div class="bnr-one">
              <%= render "shared/error_messages", object: @booking_ticket %>
              <div class="bnr-left">
                <%= f.label t "room_type_label" %>
              </div>
              <div class="bnr-right">
                <%= select_tag :room_type_id, options_from_collection_for_select(@room_types, :id, :name) %>
              </div>
              <div class="clearfix"></div>
            </div>
            <div class="bnr-one">
              <div class="bnr-left">
                <%= f.label t "check_in_lable" %>
              </div>
              <div class="bnr-right">
                <%= f.date_field :start_day, id: "start_datepicker", data:{provide:"datepicker"}, class: "form-control" %>
              </div>
              <div class="clearfix"></div>
            </div>
            <div class="bnr-one">
              <div class="bnr-left">
                <%= f.label t "check_out_lable" %>
              </div>
              <div class="bnr-right">
                <%= f.date_field :end_day, id: "end_datepicker", data:{provide:"datepicker"}, class: "form-control" %>
              </div>
              <div class="clearfix"></div><br>
              <div class="bnr-btn">
                <%= f.submit t("create_booking_butt"), class: "btn btn-primary btn-lg" %>
                <%= link_to t("cancel_booking_butt"), root_path, class: "btn btn-danger btn-lg" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
