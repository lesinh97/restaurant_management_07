<section id="about" class="container content-section text-center">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <h2><%= t "about_title" %></h2>
      <p><%= t "about_content_1" %></p>
      <p><%= t "about_content_2" %></p>
      <p><%= t "about_content_3" %></p>
    </div>
  </div>
</section>
<section id="booking" class="content-section text-center">
  <div class="booking-section">
    <div class="container">
      <div class="col-lg-8 col-lg-offset-2">
        <h2><%= t "booking_section_header" %></h2>
        <p><%= t "booking_section_content" %></p>
        <% if logged_in? %>
          <% if current_customer.booking_tickets.any? %>
            <%= link_to t("booking_button"), booking_tickets_path, class: "btn btn-default btn-lg" %>
          <% else %>
            <%= link_to t("booking_button"), new_booking_ticket_path, class: "btn btn-default btn-lg" %>
          <% end %>
        <% else %>
          <%= link_to t("booking_button"), login_path(anchor: "sectionB"), class: "btn btn-default btn-lg" %>
        <% end %>
      </div>
    </div>
  </div>
</section>
