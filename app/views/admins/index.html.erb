<body>
  <header id="header">
    <div class="container">
      <div class="row">
        <div class="col-md-10">
          <h1><span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
            <%= t "dashboard_link_header" %>
            <small><%= t "dashboard_content" %></small>
          </h1>
        </div>
      </div>
    </div>
  </header>
  <br>
  <section id="breadcrumb">
    <div class="container">
      <ol class="breadcrumb">
        <li class="active"><%= t "dashboard_link" %></li>
      </ol>
    </div>
  </section>
  <section id="main">
    <div class="container">
      <div class="row">
        <div class="col-md-3">
          <div class="list-group">
            <a href="/statistics" class="list-group-item active main-color-bg"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
              <%= t "dashboard_link" %>
            </a>
            <a href="/booking_tickets" class="list-group-item">
              <span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span>
              <%= t "booking_dashboard" %>
              <span class="badge"><%= @supports.load_booking_tickets.size %></span>
            </a>
            <a href="/rooms" class="list-group-item">
              <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <%= t "room_dashboard" %>
              <span class="badge"><%= @supports.load_rooms.size %></span>
            </a>
            <a href="/admin/customers" class="list-group-item">
              <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
              <%= t "customer_dashboard" %>
              <span class="badge"><%= @supports.load_customers.size %></span>
            </a>
            <a href="/invoices" class="list-group-item">
              <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
              <%= t "invoice_list" %>
              <span class="badge"><%= @supports.load_invoices.size %></span>
            </a>
          </div>
        </div>
        <div class="col-md-9">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><%= t "hotel_overview" %></h3>
            </div>
            <div class="panel-body">
             <div class="col-md-3">
               <div class="well dash-box">
                 <h2><span class="glyphicon glyphicon-user" aria-hidden="true"></span><%= @supports.load_customers.size %></h2>
                 <h4><%= t "customer_dashboard" %></h4>
                 <%= link_to t("view_customer"), admin_customers_path, class: "btn btn-primary btn-md" %>
               </div>
             </div>
             <div class="col-md-3">
               <div class="well dash-box">
                 <h2><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> <%= @supports.load_booking_tickets.size %></h2>
                 <h4><%= t "booking_dashboard" %></h4>
                 <%= link_to t("view_booking"), booking_tickets_path, class: "btn btn-primary btn-md" %>
               </div>
             </div>
             <div class="col-md-3">
               <div class="well dash-box">
                 <h2><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> <%= @supports.load_rooms.size %></h2>
                 <h4><%= t "room_dashboard" %></h4>
                 <%= link_to t("new_room_link"), new_admin_room_path, class: "btn btn-primary btn-md" %>
               </div>
             </div>
             <div class="col-md-3">
               <div class="well dash-box">
                 <h2><span class="glyphicon glyphicon-stats" aria-hidden="true"></span>
                  <%= number_to_currency @supports.load_booking_tickets.sum(:total_price) %>
                </h2>
                <h4><%= t "income_dashboard" %></h4>
              </div>
            </div>
          </div>
        </div>
        <!--Latest Booking-->
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title"><%= t "lastest_booking_dashboard" %></h3>
          </div>
          <div class="panel-body">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th><%= t "owner_name_label" %></th>
                  <th><%= t "room_no" %></th>
                  <th><%= t "room_type" %></th>
                  <th><%= t "start_date_table" %></th>
                  <th><%= t "end_date_table" %></th>
                  <th><%= t "ticket_price" %></th>
                  <th><%= t "make_invocie_table" %><th>
                </tr>
                  <%= render @supports.load_booking_tickets %>
                </thead>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>
