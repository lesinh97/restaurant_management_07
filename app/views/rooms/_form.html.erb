<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="form-body">
        <div class= "innter-form">
          <%= form_for @room, html: {class: "sa-innate-form"} do |f| %>
          <%= render "shared/error_messages", object: @room %>
          <div class="field">
            <%= f.label :room_numb, t("room_numb_label") %><br>
            <%= f.text_field :room_numb, class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label :position, t("room_position_label") %><br>
            <%= f.text_field :position, class: "form-control" %>
          </div>
          <div class="field">
            <%= f.label :description, t("room_descript_label") %><br>
            <%= f.text_field :description, class: "form-control" %>
          </div>
          <%= f.label t("room_type_label") %>
          <%= f.select :room_type_id, options_from_collection_for_select(@room_types, :id, :name), class: "form-control" %>
          <%= f.submit "Submit", class: "btn" %>
          <%= link_to t("back_link"), rooms_path, class: "btn btn-warning btn-lg" %>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
