<%= stylesheet_link_tag "comment" %>
<section id="show-room" class="container content-section text-center">
  <div class="services">
    <div class="container">
      <div class="col-md-6 services-left">
        <%= render @room %>
      </div>
      <div class="col-md-6 services-right"></div>
    </div>
  </div>
</section>
<div class="div-review-form">
  <%= render "review_form" %>
</div>
<% if @reviews.any? %>
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body div-review">
          <%= render @reviews %>
        </div>
      </div>
    </div>
  </div>
<% end %>
